<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:background="@android:color/transparent"
        android:gravity="center">

        <!-- CardView for Floating Effect -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            android:padding="16dp"
            android:backgroundTint="@android:color/white">

            <!-- RelativeLayout for Header and Content -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="506dp">

                <!-- Close (X) Button -->
                <TextView
                    android:id="@+id/btn_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:text="X"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Help Us Improve TextView -->
                <TextView
                    android:id="@+id/tv_help_us_improve"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="16dp"
                    android:text="Help Us Improve"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <!-- Content Layout (Below Help Us Improve) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_help_us_improve"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <!-- Suggestion Prompt TextView -->
                    <TextView
                        android:id="@+id/tv_suggestion_prompt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:gravity="center"
                        android:text="What are your suggestion/s for this application?"
                        android:textSize="16sp" />

                    <!-- Suggestion EditText -->
                    <EditText
                        android:id="@+id/et_suggestion"
                        android:layout_width="336dp"
                        android:layout_height="72dp"
                        android:layout_marginBottom="16dp"
                        android:background="@android:drawable/edit_text"
                        android:hint="Type your suggestion here"
                        android:padding="12dp" />

                    <!-- Additional Feedback TextView -->
                    <TextView
                        android:id="@+id/tv_additional_feedback"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:gravity="center"
                        android:text="What would you like to add to improve our app?"
                        android:textSize="16sp" />

                    <!-- Additional Feedback EditText -->
                    <EditText
                        android:id="@+id/et_additional_feedback"
                        android:layout_width="347dp"
                        android:layout_height="70dp"
                        android:layout_marginBottom="16dp"
                        android:background="@android:drawable/edit_text"
                        android:hint="Additional feedback"
                        android:padding="12dp" />

                    <!-- Submit Feedback Button -->
                    <Button
                        android:id="@+id/btn_submit_feedback"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/Electric_blue"
                        android:padding="12dp"
                        android:text="Submit feedback"
                        android:layout_marginTop="40dp"/>
                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>